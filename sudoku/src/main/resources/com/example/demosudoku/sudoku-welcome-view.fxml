<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0"
            style="-fx-background-color: #142850;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demosudoku.controller.SudokuWelcomeController">

   <children>
      <!-- Título principal -->
      <Label layoutX="140.0" layoutY="90.0"
             text="Sudoku"
             textFill="#00a8cc">
         <font>
            <Font name="Berlin Sans FB" size="42.0"/>
         </font>
      </Label>

      <!-- Campo de texto del usuario -->
      <TextField fx:id="nicknameTxt"
                 layoutX="115.0" layoutY="185.0"
                 prefWidth="170.0"
                 alignment="CENTER"
                 promptText="Ingrese un usuario"
                 style="-fx-background-radius: 10;">
         <font>
            <Font name="Berlin Sans FB" size="14.0"/>
         </font>
      </TextField>

      <!-- Botón de inicio del juego -->
      <Button layoutX="142.0" layoutY="245.0"
              mnemonicParsing="false"
              onAction="#handlePlay"
              prefHeight="33.0" prefWidth="115.0"
              style="-fx-background-color: #00A8CC; -fx-background-radius: 10;"
              text="Jugar"
              textFill="#142850">
         <font>
            <Font name="Berlin Sans FB" size="18.0"/>
         </font>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>

      <!-- Subtítulo opcional -->
      <Label layoutX="110.0" layoutY="340.0"
             text="Mini Proyecto #2 - Sudoku"
             textFill="white"
             opacity="0.7">
         <font>
            <Font name="Berlin Sans FB" size="12.0"/>
         </font>
      </Label>
   </children>
</AnchorPane>
